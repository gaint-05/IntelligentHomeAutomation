<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/relativeLayout_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/bg_nav0" />

                <ImageButton
                    android:id="@+id/btn_mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_ok_bg"
                    android:onClick="voiceSearch"
                    android:src="@drawable/ic_mic_black_24px" />

                <ImageButton
                    android:id="@+id/btn_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/imageView"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/btn_up" />

                <ImageButton
                    android:id="@+id/btn_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imageView"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/btn_down" />

                <ImageButton
                    android:id="@+id/btn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/imageView"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/btn_left" />

                <ImageButton
                    android:id="@+id/btn_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/imageView"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/btn_right" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/bg_chn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/bg_chn" />

            <ImageView
                android:id="@+id/bg_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/bg_vol" />

            <ImageButton
                android:id="@+id/btn_ch_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bg_chn"
                android:layout_alignTop="@id/bg_chn"
                android:background="@drawable/btn_bg"
                android:src="@drawable/btn_plus" />

            <ImageButton
                android:id="@+id/btn_ch_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bg_chn"
                android:layout_alignLeft="@id/bg_chn"
                android:background="@drawable/btn_bg"
                android:src="@drawable/btn_minus" />

            <ImageButton
                android:id="@+id/btn_vol_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bg_vol"
                android:layout_alignTop="@id/bg_vol"
                android:background="@drawable/btn_bg"
                android:src="@drawable/btn_plus" />

            <ImageButton
                android:id="@+id/btn_vol_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bg_vol"
                android:layout_alignLeft="@id/bg_vol"
                android:background="@drawable/btn_bg"
                android:src="@drawable/btn_minus" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_m"
                android:src="@drawable/btn_mute" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_round_bg"
                android:text="1"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_1"
                android:layout_toRightOf="@id/btn_1"
                android:background="@drawable/btn_round_bg"
                android:text="2"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_2"
                android:layout_toRightOf="@id/btn_2"
                android:background="@drawable/btn_round_bg"
                android:text="3"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/btn_1"
                android:layout_below="@id/btn_1"
                android:background="@drawable/btn_round_bg"
                android:text="4"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_4"
                android:layout_toRightOf="@id/btn_4"
                android:background="@drawable/btn_round_bg"
                android:text="5"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_5"
                android:layout_toRightOf="@id/btn_5"
                android:background="@drawable/btn_round_bg"
                android:text="6"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/btn_4"
                android:layout_below="@id/btn_4"
                android:background="@drawable/btn_round_bg"
                android:text="7"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_7"
                android:layout_toRightOf="@id/btn_7"
                android:background="@drawable/btn_round_bg"
                android:text="8"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_8"
                android:layout_toRightOf="@id/btn_8"
                android:background="@drawable/btn_round_bg"
                android:text="9"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_n_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/btn_7"
                android:layout_below="@id/btn_7"
                android:background="@drawable/btn_round_bg"
                android:text="Back"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_n_back"
                android:layout_toRightOf="@id/btn_n_back"
                android:background="@drawable/btn_round_bg"
                android:text="0"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_n_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_0"
                android:layout_toRightOf="@id/btn_0"
                android:background="@drawable/btn_round_bg"
                android:text="Ok"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>