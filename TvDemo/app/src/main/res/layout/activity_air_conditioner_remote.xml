<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rajhack4.homeautomation.AirConditionerRemoteActivity">

    <Button
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="55dp"
        android:text="power" />

    <Button
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/power"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:text="direction" />

    <Button
        android:id="@+id/swing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/power"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="swing" />

    <Button
        android:id="@+id/tempinc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swing"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="70dp"
        android:layout_toLeftOf="@+id/swing"
        android:layout_toStartOf="@+id/swing"
        android:text="temp+" />

    <Button
        android:id="@+id/tempdec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tempinc"
        android:layout_toEndOf="@+id/swing"
        android:layout_toRightOf="@+id/swing"
        android:text="temp-" />

    <Button
        android:id="@+id/sensor_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempdec"
        android:layout_marginTop="51dp"
        android:layout_toLeftOf="@+id/tempdec"
        android:layout_toStartOf="@+id/tempdec"
        android:text="sensor On" />
</RelativeLayout>
